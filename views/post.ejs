<%- include('partials/_header')-%>

<body>

  <%- include('partials/_navigation')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              <a href="#">Yasin Eniş</a>
              on <%= post.dateCreated.toLocaleDateString('en-US', {day:'numeric',month:'long',year:'numeric'}) %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto" style="white-space: pre-line;">
          <%- post.write -%>

          <!-- 
          <h2 class="section-heading">The Final Frontier</h2>
          <blockquote class="blockquote">The dreams of yesterday are the hopes of today and the reality of tomorrow. Science has not yet mastered prophecy. We predict too much for the next year and yet far too little for the next ten.</blockquote>
          <span class="caption text-muted">To go places and do things that have never been done before – that’s what living is all about.</span>
          -->
        </div>
      </div>
    </div>
  </article>

  <hr>
  <div class="d-flex justify-content-center ">
    <div class="d-flex flex-row justify-content-center">
      <div class="bg-white">
        <a href="/posts/edit/<%= post._id %>" class=" btn btn-primary">Update Post</a>
      </div>
      <div style="margin-left: 5px;" class="bg-white d-flex align-items-center">
        <a href="/posts/<%= post._id %>?_method=DELETE" class="btn-sec">Delete Post</a>
      </div>
    </div>
  </div>
  
  <hr>

  <%- include('partials/_footer')-%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
